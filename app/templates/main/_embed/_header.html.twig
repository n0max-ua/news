<header class="px-5 bg-dark text-light">
    <nav class="navbar navbar-expand-md navbar-dark  ">
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav">
                <li class="nav-item mr-5 fs-5">
                    <a class="nav-link" href="{{ path('main_homepage') }}">
                        <strong><i class="fab fa-neos"></i></strong>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('main_news') }}">News</a>
                </li>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    {% if app.user.isActive %}
                        <li class="nav-item">
                            {% set status =  constant('App\\Entity\\Post::STATUS_CREATED') %}
                            <a class="nav-link" href="{{ path('main_post_status', {'id' : status}) }}">Posts</a>
                        </li>
                    {% endif %}
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin') }}">Admin Panel</a>
                    </li>
                {% endif %}
            </ul>
        </div>
        <div class="collapse navbar-collapse justify-content-end">
            <ul class="navbar-nav">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('main_profile_index') }}">
                            {% if app.user.photo %}
                                <img style="height: 25px; width: 25px; border-radius: 50%;"
                                     src="{{ asset('uploads/') }}{{ app.user.photo }}"/>
                            {% else %}
                                <img style="height: 25px; width: 25px; border-radius: 50%;"
                                     src="{{ asset('build/images/no-img.jpg') }}"/>
                            {% endif %}
                            <strong class="ml-2">{{ app.user.email }}</strong>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('main_logout') }}" class="nav-link">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Logout</span>
                        </a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('main_registration') }}">Registration</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('main_login') }}">Login</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </nav>
</header>