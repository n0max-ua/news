<div>
    <h4 class="mb-3">Last News</h4>
    {% if posts|length %}
        <div>
            {% for post in posts %}
                <div class="mb-3">
                    <a href="{{ path('main_news_item', {'id' : post.id}) }}">{{ post.title }}</a>
                </div>
                <hr>
            {% endfor %}
        </div>
    {% else %}
        <p>No news for now</p>
    {% endif %}
</div>