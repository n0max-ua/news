{% extends 'main/base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <h1 class="mb-3">{{ title }}</h1>
    <a class="btn btn-primary btn-sm mb-2" href="{{ path('main_post_add') }}">Add new Post</a>
    <hr>
    <a class="btn btn-primary btn-sm mb-2" href="{{ path('main_post_list') }}">All</a>
    <a class="btn btn-primary btn-sm mb-2" href="{{ path('main_post_status', {'id': 1}) }}">Created</a>
    <a class="btn btn-primary btn-sm mb-2" href="{{ path('main_post_status', {'id': 2}) }}">Posted</a>
    <a class="btn btn-primary btn-sm mb-2" href="{{ path('main_post_status', {'id': 3}) }}">Deleted</a>
    {% for post in posts %}
        <div class="border-bottom row mb-2 p-3">
            <div class="col-md-1 d-flex justify-content-center align-items-center">{{ post.createdAt | date('H:i') }}</div>
            <div class="col-md-11">
                <h4>{{ post.title }}</h4>
                <a class="btn btn-secondary btn-sm" href="{{ path('main_post_edit', {'id': post.id}) }}">Edit post</a>
                <a class="btn btn-danger btn-sm" href="{{ path('main_post_delete', {'id': post.id}) }}">Delete post</a>
            </div>
        </div>
    {% endfor %}
{% endblock %}
