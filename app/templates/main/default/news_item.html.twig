{% extends 'main/base.html.twig' %}

{% block title %}Homepage{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-2 bg-dark">
            {# side#}
        </div>
        <div class="col-md-8">
            <h2 class="mb-3">{{ post.title }}</h2>
            <p>{{ post.createdAt | date('y.m.d H:i') }}</p>
            {% if post.image %}
                <div class="row my-3 d-flex justify-content-center">
                    <img class="" style="max-height: 400px" src="{{ asset('uploads/') }}{{ post.image }}"/>
                </div>
            {% endif %}
            <p class="fs-5 p-3 text-justify">{{ post.content }}</p>
        </div>
        <div class="col-md-2 bg-dark">
            {# side #}
        </div>
    </div>

{% endblock %}